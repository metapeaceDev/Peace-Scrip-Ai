rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check file size (max 50MB for videos, 10MB for images)
    function isValidSize() {
      return request.resource.size < 50 * 1024 * 1024;
    }
    
    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true; // Anyone can read profile images
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId 
                   && isImage() 
                   && request.resource.size < 10 * 1024 * 1024;
    }
    
    // Project JSON files stored by userId (supports large files 16MB+)
    match /projects/{userId}/{fileName} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Project assets (storyboards, images, etc.)
    match /projects/{projectId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidSize();
    }
    
    // User videos - CRITICAL for video generation
    match /videos/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId && isValidSize();
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
