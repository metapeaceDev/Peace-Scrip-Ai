{
  "name": "peace-script-ai",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd comfyui-service && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,green\"",
    "build": "tsc && vite build",
    "prebuild": "node scripts/validate-env.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:coverage:html": "vitest run --coverage && open coverage/index.html",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate:env": "node scripts/validate-env.js",
    "validate:env:prod": "node scripts/validate-env.js --production",
    "security:check": "npm audit && node scripts/validate-env.js",
    "firebase:deploy": "npm run build && firebase deploy",
    "predeploy": "node scripts/validate-env.js --production",
    "firebase:rules": "firebase deploy --only firestore:rules,storage:rules",
    "firebase:hosting": "npm run build && firebase deploy --only hosting",
    "setup": "./setup-dev.sh",
    "docker:redis": "cd comfyui-service && docker-compose up -d redis",
    "docker:stop": "cd comfyui-service && docker-compose down"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "@huggingface/inference": "^4.13.4",
    "@stripe/stripe-js": "^8.5.3",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.47.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.10.1",
    "recharts": "^3.6.0",
    "stripe": "^20.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bull": "^3.15.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "bull": "^4.16.5",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "redis": "^5.10.0",
    "terser": "^5.44.1",
    "typescript": "^5.0.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
