rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }
    
    // Helper function to check admin role
    function hasAdminRole(role) {
      return isAdmin() && 
             request.auth.token.adminRole == role;
    }
    
    // Helper function to check if user is a collaborator
    function isCollaborator(projectId) {
      return exists(/databases/$(database)/documents/projects/$(projectId)/collaborators/$(request.auth.uid));
    }
    
    // Helper function to check if user is project owner
    function isProjectOwner(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
    }
    
    // Helper function to get collaborator role
    function getCollaboratorRole(projectId) {
      let collaboratorPath = /databases/$(database)/documents/projects/$(projectId)/collaborators/$(request.auth.uid);
      return exists(collaboratorPath) ? get(collaboratorPath).data.role : 'none';
    }
    
    // Helper function to check if user is owner or admin
    function isOwnerOrAdmin(projectId) {
      return isProjectOwner(projectId) || getCollaboratorRole(projectId) == 'admin';
    }
    
    // Helper function to check if user can manage team (Owner/Admin/Editor)
    function canManageTeam(projectId) {
      let role = getCollaboratorRole(projectId);
      return isProjectOwner(projectId) || role == 'admin' || role == 'editor';
    }
    
    // Helper function to check if user has permission
    function hasPermission(projectId, permission) {
      let role = getCollaboratorRole(projectId);
      
      // Owner has all permissions
      return isProjectOwner(projectId) || 
             // Admin has all permissions
             role == 'admin' ||
             // Editor has specific permissions
             (role == 'editor' && (permission == 'canEdit' || permission == 'canExport' || permission == 'canViewAnalytics'));
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // Allow read own document OR admin can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow write own document
      allow write: if isOwner(userId);
      
      // Allow query by email (needed for team collaboration)
      // Only authenticated users can query to find userId from email
      allow list: if isAuthenticated() || isAdmin();
    }
    
    // Admin Users Collection - Super Admin Only
    match /admin-users/{userId} {
      allow read: if isAdmin();
      allow write: if hasAdminRole('super-admin');
    }
    
    // Analytics Aggregate - Admin Read Only
    match /analytics-aggregate/{period} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Admin Audit Log - Admin Read, System Write
    match /admin-audit-log/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false;
    }
    
    // Projects collection - role-based access control
    match /projects/{projectId} {
      // Allow read if user is authenticated and (owns the project OR is a collaborator) OR is admin
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isCollaborator(projectId)) || isAdmin();
      
      // Allow create if authenticated and setting userId to own uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update if user has canEdit permission OR is the owner
      allow update: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || hasPermission(projectId, 'canEdit'));
      
      // Allow delete if user has canDelete permission (owner/admin only)
      allow delete: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isOwnerOrAdmin(projectId));
    }
    
    // Allow list/query for user's own projects AND projects they're collaborators on
    match /projects/{projectId} {
      allow list: if isAuthenticated() || isAdmin();
    }
    
    // Subscriptions collection - users can only access their own subscription OR admin can read all
    match /subscriptions/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    
    // Usage tracking collection
    match /usage/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    // Generations collection - AI usage tracking
    match /generations/{generationId} {
      // Users can read their own generations OR admin can read all
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Users can create their own generation records
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // No updates or deletes allowed (immutable records)
      allow update, delete: if false;
      
      // Allow admin to list all generations for analytics
      allow list: if isAdmin();
    }

    // User Model Usage Summary - AI model usage tracking
    match /userModelUsage/{usageId} {
      // Users can read their own model usage OR admin can read all
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Users can write their own model usage records
      allow create, update: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own usage records
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow admin to list all usage for analytics
      allow list: if isAdmin();
    }

    // Project Invitations - for team collaboration
    match /projectInvitations/{invitationId} {
      // Anyone can read their own invitations (by email)
      allow read: if isAuthenticated();
      
      // Users with canInvite permission can create invitations
      allow create: if isAuthenticated();
      
      // Invitee can update status (accept/reject)
      allow update: if isAuthenticated();
      
      // Inviter or invitee can delete
      allow delete: if isAuthenticated();
    }

    // Notifications - for user alerts
    match /notifications/{notificationId} {
      // Users can read their own notifications OR notification is for them
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Cloud Functions can create notifications (no auth required)
      // Users with admin permission can also create
      allow create: if true; // Allow Cloud Functions to create
      
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      
      // Users can delete their own notifications
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }

    // Collaborators collection - role-based permissions
    match /collaborators/{collaboratorId} {
      // Anyone authenticated can read collaborators
      allow read: if isAuthenticated();
      
      // Only owner/admin can create or update collaborators
      allow create, update: if isAuthenticated();
      
      // Only owner/admin can delete collaborators
      allow delete: if isAuthenticated();
    }

    // Project Collaborators subcollection (legacy - keeping for compatibility)
    match /projects/{projectId}/collaborators/{userId} {
      // Anyone can read collaborators of a project they have access to
      allow read: if isAuthenticated() && (
        get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid ||
        isCollaborator(projectId)
      );
      
      // Owner, Admin, and Editor can create/update/delete collaborators
      allow create, update, delete: if isAuthenticated() && (
        get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid ||
        canManageTeam(projectId)
      );
    }

    // Email collection - for Firebase Extensions (Trigger Email)
    match /mail/{emailId} {
      // Allow authenticated users to create email documents
      allow create: if isAuthenticated();
      
      // Allow users to read their own sent emails
      allow read: if isAuthenticated();
      
      // Prevent updates and deletes (emails are sent once)
      allow update, delete: if false;
    }

    // Admin Invitations - for admin access verification
    match /admin-invitations/{invitationId} {
      // Allow authenticated users to read invitations for their email
      allow read: if isAuthenticated() && 
                     (request.auth.token.email == resource.data.email ||
                      hasAdminRole('super-admin'));
      
      // Only Cloud Functions can create (via super-admin)
      allow create: if false;
      
      // User can update their own invitation (confirm)
      allow update: if isAuthenticated() && 
                       request.auth.token.email == resource.data.email &&
                       resource.data.status == 'pending';
      
      // Only super-admin can delete
      allow delete: if hasAdminRole('super-admin');
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
