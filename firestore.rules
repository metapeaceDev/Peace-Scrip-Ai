rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Projects collection - users can only access their own projects
    match /projects/{projectId} {
      // Allow read if user is authenticated
      // (We filter by userId in the query, so all readable docs will be user's own)
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and setting userId to own uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete if user owns the project (check existing userId)
      allow update, delete: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || !('userId' in resource.data));
    }
    
    // Allow list/query only for user's own projects
    match /projects/{projectId} {
      allow list: if isAuthenticated();
    }
    
    // Subscriptions collection - users can only access their own subscription
    match /subscriptions/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Usage tracking collection
    match /usage/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
