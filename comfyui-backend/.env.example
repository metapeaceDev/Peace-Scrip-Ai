# ComfyUI Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ComfyUI Configuration
COMFYUI_PATH=/workspace/ComfyUI
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT=300

# Firebase Authentication (optional)
# Get service account key from: https://console.firebase.google.com/project/peace-script-ai/settings/serviceaccounts/adminsdk
FIREBASE_SERVICE_ACCOUNT=firebase-service-account.json

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173,https://peace-script-ai.web.app

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
